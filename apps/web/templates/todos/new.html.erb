<h2>Add todo</h2>

<% unless params.valid? %>
    <div class="errors">
      <h3>There was a problem with your submission</h3>
      <ul>
        <% params.errors.each do |error| %>
            <li><%= error.attribute_name %> is required</li>
        <% end %>
      </ul>
    </div>
<% end %>

<%=
    form_for :todo, '/todos' do
      div class: 'input' do
        label      :status
        text_field :status
      end

      div class: 'input' do
        label      :title
        text_field :title
      end

      div class: 'controls' do
        submit 'Create Todo'
      end
    end
%>